{
  "env": {
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "prettier"],
  "rules": {
    "no-console": "warn",
    "no-empty-function": "error",
    "no-implicit-coercion": "error",
    "no-var": "error",
    "template-curly-spacing": ["error", "never"],
    "prefer-spread": "warn",
    "prefer-const": "error"
  }
}
